{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "jest/globals": true
  },
  "extends": ["airbnb-base", "prettier", "plugin:node/recommended", "plugin:security/recommended", "plugin:security-node/recommended", "plugin:sonarjs/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": ["prettier", "jest", "security", "security-node", "sonarjs"],
  "rules": {
    "prettier/prettier": "error"
  }
}